{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Azure Functions",
      "type": "shell",
      "command": "dotnet",
      "args": ["build"],
      "options": {
        "cwd": "${workspaceFolder}/FreeWaterTips.API.Azure.Functions"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Start Azure Functions",
      "type": "shell",
      "command": "dotnet",
      "args": ["run"],
      "options": {
        "cwd": "${workspaceFolder}/FreeWaterTips.API.Azure.Functions"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s+(error|warning|info)\\\\s+(TS\\\\d+)\\\\s*:\\\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Building.*$",
          "endsPattern": "^.*Application started.*|.*Now listening on.*$"
        }
      }
    },
    {
      "label": "Start React Native",
      "type": "shell",
      "command": "npm",
      "args": ["run", "web"],
      "options": {
        "cwd": "${workspaceFolder}/FreeWaterTips.ReactNative",
        "env": {
          "BROWSER": "none"
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting Metro Bundler|Starting development server",
          "endsPattern": "Bundling complete|Metro.*waiting|Compiled successfully|compiled successfully"
        }
      }
    },
    {
      "label": "Start Backend",
      "dependsOn": ["Build Azure Functions", "Start Azure Functions"],
      "dependsOrder": "sequence"
    },
    {
      "label": "Start Backend + Frontend",
      "dependsOn": ["Start Backend", "Start React Native"],
      "dependsOrder": "sequence"
    }
  ]
}
