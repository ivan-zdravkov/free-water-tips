{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Azure Functions",
      "type": "shell",
      "command": "dotnet",
      "args": ["build"],
      "options": {
        "cwd": "${workspaceFolder}/FreeWaterTips.API.Azure.Functions"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Start Azure Functions",
      "type": "shell",
      "command": "func",
      "args": ["start", "--csharp"],
      "options": {
        "cwd": "${workspaceFolder}/FreeWaterTips.API.Azure.Functions"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s+(error|warning|info)\\\\s+(TS\\\\d+)\\\\s*:\\\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Azure Functions Core Tools.*$",
          "endsPattern": "^.*Worker process started and initialized.*$"
        }
      }
    },
    {
      "label": "Start React Native Web",
      "type": "shell",
      "command": "npm",
      "args": ["run", "web"],
      "options": {
        "cwd": "${workspaceFolder}/FreeWaterTips.ReactNative"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting Metro Bundler|Starting development server",
          "endsPattern": "Bundling complete|Metro.*waiting|Compiled successfully|compiled successfully"
        }
      }
    },
    {
      "label": "Start React Native Android",
      "type": "shell",
      "command": "npm",
      "args": ["run", "android"],
      "options": {
        "cwd": "${workspaceFolder}/FreeWaterTips.ReactNative"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Start Backend",
      "dependsOn": ["Build Azure Functions", "Start Azure Functions"],
      "dependsOrder": "sequence"
    },
    {
      "label": "Start Backend + Web",
      "dependsOn": ["Start Backend", "Start React Native Web"],
      "dependsOrder": "sequence"
    },
    {
      "label": "Start Backend + Android",
      "dependsOn": ["Start Backend", "Start React Native Android"],
      "dependsOrder": "sequence"
    }
  ]
}
