{
  "name": "free-water-tips",
  "version": "1.0.0",
  "description": "A community-driven platform to find free water sources near you",
  "main": "src/web/index.html",
  "scripts": {
    "setup": "bash scripts/setup-dev.sh",
    "containers:setup": "node src/db/scripts/setup-containers.js setup",
    "containers:test": "node src/db/scripts/setup-containers.js test",
    "web:start": "npx http-server src/web -p 3000 -o -c-1",
    "api:install": "cd src/api && npm install",
    "api:start": "cd src/api && func start",
    "db:install": "cd src/db && npm install",
    "db:clean": "node src/db/scripts/clean.js locations",
    "db:clean:locations": "node src/db/scripts/clean.js locations",
    "db:clean:ratelimits": "node src/db/scripts/clean.js ratelimits",
    "db:clean:testdata": "node src/db/scripts/clean.js testdata",
    "db:seed": "node src/db/scripts/seed.js locations",
    "db:seed:locations": "node src/db/scripts/seed.js locations",
    "db:seed:testdata": "node src/db/scripts/seed.js testdata",
    "db:reset": "cd src/db && npm run db:reset",
    "all:install": "concurrently \"npm run api:install\" \"npm run db:install\"",
    "all:start": "concurrently \"npm run web:start\" \"npm run api:start\"",
    "build": "npm run build:prepare && npm run build:copy && npm run build:optimize",
    "build:prepare": "rm -rf dist && mkdir -p dist",
    "build:copy": "cp -r src/web/* dist/",
    "build:optimize": "npm run build:minify-css && npm run build:optimize-images",
    "build:minify-css": "npx postcss dist/css/styles.css --use autoprefixer cssnano -o dist/css/styles.min.css",
    "build:optimize-images": "echo 'Image optimization placeholder - add imagemin or similar'",
    "serve": "npm run build && npx http-server dist -p 8080 -o",
    "test": "npm run test:api",
    "test:lint": "echo 'Skipping lint - no web JS files in current setup'",
    "test:html": "echo 'Skipping HTML validation - focusing on API'",
    "test:lighthouse": "npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html --chrome-flags='--headless'",
    "test:api": "jest tests/e2e --verbose --detectOpenHandles --forceExit",
    "test:api:watch": "jest tests/e2e --watch --verbose",
    "test:api:coverage": "jest tests/e2e --coverage --verbose --detectOpenHandles --forceExit",
    "test:api:full": "concurrently --kill-others --success first \"npm run api:start\" \"wait-on http://localhost:7071/api/health && npm run test:api\"",
    "test:e2e": "npm run test:api",
    "test:e2e:ci": "cross-env CI=true npm run test:api:coverage",
    "deploy": "npm run build && npx gh-pages -d dist",
    "clean": "rm -rf dist node_modules package-lock.json",
    "format": "npx prettier --write 'src/**/*.{js,css,html,json}'",
    "validate": "npx html-validate src/web/index.html && npx stylelint src/web/css/*.css",
    "watch": "npx chokidar 'src/web/**/*' -c 'npm run build:copy'",
    "lighthouse": "npx lighthouse http://localhost:3000 --view",
    "audit": "npm audit && npx lighthouse http://localhost:3000 --only-categories=accessibility,best-practices,seo --chrome-flags='--headless'"
  },
  "keywords": [
    "water",
    "free-water",
    "community",
    "maps",
    "pwa",
    "javascript",
    "google-maps",
    "spa"
  ],
  "author": "Free Water Tips Team",
  "license": "MIT",
  "homepage": "https://github.com/your-username/free-water-tips#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/free-water-tips.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/free-water-tips/issues"
  },
  "devDependencies": {
    "@types/google.maps": "^3.54.10",
    "@types/jest": "^30.0.0",
    "autoprefixer": "^10.4.16",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "cssnano": "^6.0.1",
    "eslint": "^8.55.0",
    "gh-pages": "^6.1.0",
    "html-validate": "^8.7.4",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "lighthouse": "^11.4.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.1",
    "stylelint": "^16.0.2",
    "stylelint-config-standard": "^36.0.0",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "files": [
    "src/web",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "lib": "src/web/js",
    "doc": "docs"
  },
  "config": {
    "port": 3000,
    "build_dir": "dist"
  },
  "dependencies": {
    "@azure/cosmos": "^4.4.1"
  }
}
