{
  "name": "Free Water Tips",
  "short_name": "WaterTips",
  "description": "Find free water sources near you with our community-driven database of public water fountains, restaurants, and cafes that offer free water.",
  "version": "1.0.0",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#2196F3",
  "background_color": "#ffffff",
  "scope": "/",
  "lang": "en",
  "categories": ["utilities", "travel", "health"],
  "icons": [
    {
      "src": "/images/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/images/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/images/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/images/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/images/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/images/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/images/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/images/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "/images/screenshots/desktop-map.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Interactive map view showing water sources"
    },
    {
      "src": "/images/screenshots/mobile-map.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile map view with search functionality"
    },
    {
      "src": "/images/screenshots/contribute-form.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Add new water source form"
    }
  ],
  "shortcuts": [
    {
      "name": "Find Water Near Me",
      "short_name": "Find Water",
      "description": "Locate water sources near your current location",
      "url": "/?action=locate",
      "icons": [
        {
          "src": "/images/icons/shortcut-locate.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Add Water Source",
      "short_name": "Add Source",
      "description": "Contribute a new water source to the community",
      "url": "/contribute",
      "icons": [
        {
          "src": "/images/icons/shortcut-add.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/contribute",
    "method": "GET",
    "params": {
      "title": "name",
      "text": "description",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "geo",
      "url": "/?lat=%s&lng=%s"
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://free-water-tips.pages.dev/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "scope_extensions": [
    {
      "origin": "https://free-water-tips.pages.dev"
    }
  ],
  "id": "/",
  "permissions": [
    "geolocation"
  ],
  "features": [
    "Cross Platform",
    "fast",
    "simple"
  ]
}
